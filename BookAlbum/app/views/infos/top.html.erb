<!-- carousel用のスタイル -->
<style type="text/css">
h2{
    margin: 0;     
    color: #666;
    padding-top: 90px;
    font-size: 52px;
    font-family: "trebuchet ms", sans-serif;    
}
.item{
    background: #333;    
    text-align: center;
    height: 300px !important;
}
.carousel{
    margin-top: 20px;
}
.carousel-area{
	/*margin: 20px;*/
	margin: 0 auto;  
	width:768px;
	
}
</style>

<!-- http://www.tutorialrepublic.com/codelab.php?topic=bootstrap&file=carousel -->
<div class="carousel-area">
	<!-- 1.カルーセルパネルの配置 -->
	<div id="carousel-book" class="carousel slide"  data-interval="3000" data-ride="carousel">
	
	    <!-- 2.表示中のスライドを表すリスト -->
	    <ol class="carousel-indicators">
	        <li data-target="#carousel-book" data-slide-to="0" class="active"></li>
	        <li data-target="#carousel-book" data-slide-to="1"></li>
	        <li data-target="#carousel-book" data-slide-to="2"></li>
	     </ol>
	
	    <!-- 3.表示するスライドのコンテンツ -->
	    <div class="carousel-inner">
	    	<% @books.each_with_index do |book,index| %>
	        <div class="item <%='active' if index==0 %>">
	          <%= book.amazon_url.html_safe %>
	          <div class="container">              	
	            <div class="carousel-caption">                	
	                <h2><%=book.name%></h2>
	                <p><%=book.description%></p>
	            </div>
	          </div>
	        </div>
	        <% end %>  
	    </div>
	
	    <!-- 4.左右の矢印ボタン -->
	    <a class="left carousel-control" href="#carousel-book" role="button" data-slide="prev">
	        <span class="glyphicon glyphicon-chevron-left"></span>
	    </a>
	    <a class="right carousel-control" href="#carousel-book" role="button" data-slide="next">
	        <span class="glyphicon glyphicon-chevron-right"></span>
	    </a> 
	    
	</div>
</div>