

<p id="notice"><%= notice %></p>

<h3>Listing Books</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th width="140px">Book</th>
      <th width="250px"></th>
      <th width="120px">評価</th>
      <th width="70px">価格</th>
      <!--<th>Description</th>-->
      <th>出版社</th>
      <th width="80px">カテゴリ</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>  	
    <% @books.each_with_index do |book,index| %>
    <% rank_id = "star"+index.to_s %>
      <tr>
      	<td><%= book.amazon_url.match(/<img.*" >/).to_a[0].to_s.sub(/<img/,'<img height="55%"').html_safe %></td>
        <td><%= book.name %></td>
        <td><div id="<%=rank_id %>"></div></td>
        <td><%= number_to_currency(book.price, :precision=> 0 ,:unit => "¥", :separator => ",") %></td>
        <!--<td><%= book.description %></td>-->
        <td><%= (book.publisher ?  book.publisher.name : "" )%></td>
        <td><%= (book.category ?  book.category.name : "" )%></td>
        <td>
        	<%= link_to 'Show', book %>
        	<% if @is_admin_mode then  %>
        		<%= link_to 'Edit', edit_book_path(book) %>
        		<%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
        	<% end %> 
        </td>
      </tr>
      <script>doRaty("<%=rank_id %>",<%= book.rank %>)</script>
    <% end %>    
  </tbody>
</table>

<br>
<% if @is_admin_mode then  %>
    <%= link_to 'New Book', new_book_path %>
<% end %>


